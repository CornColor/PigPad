<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="#FFEEDA"
    android:id="@+id/bg"
    >
    <View
        android:id="@+id/v_01"
        android:layout_width="4dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:background="#fffe9c2d"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/rv_goods_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:background="@color/red_txt"
        />
        <TextView
            android:id="@+id/tv_godds_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:text="北派五怪小说朋友圈（1分钟）"
            android:lines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@id/rv_goods_img"
            android:textColor="#8a000000"
            android:textSize="14sp"
            />
<View
    android:id="@+id/v_line"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:background="#1e000000"
    android:layout_alignParentBottom="true"
    />


</RelativeLayout>